{% extends "::base.html.twig" %}

{% block title %}Home{% endblock %}

{% block body %}
<h1>Posts</h1>
<hr>
<div class="row">
    {% for post in posts %}
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>{{ post.title }}</h3>
                    <p><a href="{{ path('show_post', {id: post.id}) }}" class="btn btn-primary" role="button">Lire</a></p>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
<b><a href=""></a></b><hr>

{% endblock %}
